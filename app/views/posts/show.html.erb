<div style="float:right;">
  <% if current_user.admin? %>
  <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Delete', post_path(@post),
                    method: :delete, data: { confirm: 'Are you sure?' } %> | 
  <% end %>
  <%= link_to 'Back to the forum', posts_path %>
</div>

<div class="span8 div-centered">
  <h1><%= @post.title %></h1><br/>
<p><strong>Link: </strong><%= link_to "#{@post.url}", "#{@post.url}" %></p>
  <br/>
<p>
  <%= @post.text %></p>
  
<br /><br />
<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    
    <%= f.text_area :body %>
  </p>
  <p>
    <center><%= f.submit class: "btn btn-primary" %></center>
  </p>
<% end %>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong><%= comment.commenter %></strong> - <%= comment.created_at %>
  </p>
 
  <p>
    <%= comment.body %>
  </p>
  <hr>
<% end %>



</div>