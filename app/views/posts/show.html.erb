<div style="float:right;">
  <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Delete', post_path(@post),
                    method: :delete, data: { confirm: 'Are you sure?' } %> | 
  <%= link_to 'Back to the forum', posts_path %>
</div>

<div class="span8 div-centered">
  <h1><%= @post.title %></h1><br/>
<p><strong>Link: </strong><%= link_to "#{@post.url}", "#{@post.url}" %></p>
  <br/>
<p>
  <%= @post.text %></p>
  
<br /><br />
<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

</div>